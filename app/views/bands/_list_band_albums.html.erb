<h3>Albuns</h3>

<%= link_to 'Add Album', new_album_path %>

<% if !@band.albums.nil? %>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
      </tr>
    </thead>

    <tbody>
      <% @band.albums.each do |album| %>
        <tr>
          <td><%= link_to album.name, album %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>